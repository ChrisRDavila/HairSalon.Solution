@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 
else
{
  <ol>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.CustomerName}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
    }
  </ol>
}

<p>@Html.ActionLink("Add new client", "Create")</p>